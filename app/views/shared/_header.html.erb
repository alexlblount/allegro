<!-- app/views/shared/_header.html.erb -->
<header class="bg-white shadow">
  <nav class="container mx-auto px-6 py-3">
    <div class="flex justify-between items-center">
      <div class="text-xl font-semibold text-gray-700">
        <%= link_to "YourApp", root_path %>
      </div>
      <div class="hidden md:flex space-x-4">
        <%= link_to "Home", "#", class: "text-gray-800 hover:text-gray-600" %>
        <%= link_to "Features", "#", class: "text-gray-800 hover:text-gray-600" %>
        <%= link_to "Pricing", "#", class: "text-gray-800 hover:text-gray-600" %>
        <%= link_to "Contact", "#", class: "text-gray-800 hover:text-gray-600" %>
        <% if user_signed_in? %> 
          <!-- <div> Welcome <%= current_user.email %> </div> -->
          <%= button_to "Sign out", destroy_user_session_path, method: :delete %> 
        <% else %>
          <%= button_to "Sign in", new_user_session_path %> 
        <% end %>
      </div>
      <div class="hidden md:flex space-x-4">
        <% if user_signed_in? %> 
          <div>
            <%= current_user.email %>
          </div>
          <%= button_to "Sign out", destroy_user_session_path, method: :delete %> 
        <% else %>
          <%= button_to "Sign in", new_user_session_path %> 
        <% end %>
      </div>
      <div class="md:hidden">
        <!-- Mobile menu button -->
        <button class="text-gray-500 hover:text-gray-600 focus:outline-none focus:text-gray-600">
          <svg viewBox="0 0 24 24" class="h-6 w-6 fill-current">
            <path fill-rule="evenodd" d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"></path>
          </svg>
        </button>
      </div>
    </div>
  </nav>
</header>
