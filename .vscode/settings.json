    "activejob",
    "activemodel",
    "activerecord",
    "activestorage",
    "backrefs",
    "bigdecimal",
    "bindex",
    "bootsnap",
    "cyclomatic",
    "dotenv",
    "erubi",
    "geocoder",
    "groupdate",
    "hairtrigger",
    "hotwired",
    "jbuilder",
    "kaminari",
    "nokogiri",
    "ostruct",
    "racc",
    "railties",
    "retriable",
    "rubocop",
    "shoulda",
    "sidekiq",
    "simplecov",
    "tailwindcss",
    "tomo",
    "useragent",
    "vite",
    "zeitwerk"
