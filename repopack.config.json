{
  "output": {
    "filePath": "ai/allegro.xml",
    "style": "xml",
    "removeComments": false,
    "removeEmptyLines": false,
    "topFilesLength": 5,
    "showLineNumbers": false
  },
  "include": ["app/**/*", "lib/**/*", "db/schema.rb", "spec/**/*", ".node-version", ".ruby-version", "Gemfile", "package.json"],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": []
  },
  "security": {
    "enableSecurityCheck": true
  }
}
